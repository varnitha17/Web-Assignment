$(document).ready(function() {

    $("#submitBtn").click(function() {
        alert("Submitting your application...");
    });

    // Simple mobile number check
    $("#regForm").on("submit", function(e) {
        let mobile = $("input[name='mobile']").val();
        if (!/^[0-9]{10}$/.test(mobile)) {
            alert("Mobile number must be 10 digits");
            e.preventDefault();
        }
    });

});

<?php
if ($_SERVER['REQUEST_METHOD'] == 'POST') {

    $name = $_POST['fullname'];
    $email = $_POST['email'];
    $mobile = $_POST['mobile'];
    $gender = $_POST['gender'];
    $dob = $_POST['dob'];
    $address = $_POST['address'];
}
?>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Application Received</title>
    <link rel="stylesheet" href="style.css">
    <style>
        .result {
            width: 50%;
            margin: 30px auto;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px #bbb;
        }
h2 { text-align: center; }
        .row { margin: 12px 0; }
        .label { font-weight: bold; }
    </style>
</head>

<body>

<div class="result">
    <h2>Application Submitted Successfully!</h2>

    <div class="row"><span class="label">Full Name: </span><?php echo $name; ?></div>
    <div class="row"><span class="label">Email: </span><?php echo $email; ?></div>
    <div class="row"><span class="label">Mobile: </span><?php echo $mobile; ?></div>
    <div class="row"><span class="label">Gender: </span><?php echo $gender; ?></div>
    <div class="row"><span class="label">Date of Birth: </span><?php echo $dob; ?></div>
    <div class="row"><span class="label">Address: </span><?php echo nl2br($address); ?></div>

</div>

</body>
</html>
