            <input type="email" name="email" required>

            <label>Mobile Number</label>
            <input type="text" name="mobile" required>

            <label>Gender</label>
            <select name="gender">
                <option>Male</option>
<option>Female</option>
                <option>Other</option>
            </select>

            <label>Date of Birth</label>
            <input type="date" name="dob" required>

            <label>Address</label>
